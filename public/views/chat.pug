extends layout
block chat
    section(class="section")
        h1 PARAGON
        p Public Chat
        div(class="message-area")
            div(id="messages")
            form(onsubmit="return newMessage()", class="chat-form", autocomplete="off")
                div
                    input(type="text", name="username", placeholder="Username", id="username")
                div
                    input(type="text", name="message", placeholder="Message", id="input")
                div
                    input(type="submit", value="Send", class="send-btn-disabled", id="send-btn")